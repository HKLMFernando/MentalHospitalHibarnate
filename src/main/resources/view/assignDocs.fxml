<AnchorPane prefHeight="322.0" prefWidth="560.0" style="-fx-background-color: #DCDCDC;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.mentalhealththeraphycenter.controller.AssignDoctorsController">
   <children>
      <ComboBox fx:id="docComboBox" layoutX="20.0" layoutY="14.0" onAction="#loadComboBoxAction" onMouseClicked="#setDetailsCBoxAction" opacity="0.67" prefHeight="34.0" prefWidth="191.0" promptText="choose therapist" />
      <ImageView fx:id="image" fitHeight="148.0" fitWidth="150.0" layoutX="62.0" layoutY="43.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../Pictures/Mental%20Hospital/icons8-doctor-50.png" />
         </image>
      </ImageView>
      <Circle fx:id="circleD" fill="#1fff29" layoutX="275.0" layoutY="152.0" radius="8.0" stroke="BLACK" strokeType="INSIDE" />
      <Label fx:id="docAvailable" layoutX="311.0" layoutY="141.0" prefHeight="22.0" prefWidth="108.0" text="Available">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font>
      </Label>
      <Label fx:id="docIdFromCombo" layoutX="37.0" layoutY="68.0" prefHeight="22.0" prefWidth="108.0" text="DocID">
